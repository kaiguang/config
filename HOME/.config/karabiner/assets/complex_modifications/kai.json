{
  "title": "Kai",
  "rules": [
    {
      "description": "Caps lock to hyper key and escape",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "caps_lock" },
          "to": [
            {
              "key_code": "right_shift",
              "modifiers": ["right_command", "right_control", "right_option"],
              "lazy": true
            }
          ],
          "to_if_alone": [{ "key_code": "escape" }]
        }
      ]
    },
    {
      "description": "Change macOS system diagnostic shortcuts to -=",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "comma",
            "modifiers": {
              "mandatory": ["command", "control", "option", "shift"]
            }
          },
          "to": [{ "key_code": "hyphen" }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "period",
            "modifiers": {
              "mandatory": ["command", "control", "option", "shift"]
            }
          },
          "to": [{ "key_code": "equal_sign" }]
        }
      ]
    },
    {
      "description": "Hyper + hjkl to arrow keys",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["command", "control", "option", "shift"]
            }
          },
          "to": [{ "key_code": "left_arrow" }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["command", "control", "option", "shift"]
            }
          },
          "to": [{ "key_code": "down_arrow" }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["command", "control", "option", "shift"]
            }
          },
          "to": [{ "key_code": "up_arrow" }]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["command", "control", "option", "shift"]
            }
          },
          "to": [{ "key_code": "right_arrow" }]
        }
      ]
    },
    {
      "description": "After command+tab, use h/l to choose applications",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": { "mandatory": ["command"] }
          },
          "to": [{ "key_code": "left_arrow", "modifiers": ["command"] }],
          "conditions": [
            {
              "type": "variable_if",
              "name": "during mission control",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": { "mandatory": ["command"] }
          },
          "to": [{ "key_code": "right_arrow", "modifiers": ["command"] }],
          "conditions": [
            {
              "type": "variable_if",
              "name": "during mission control",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": { "mandatory": ["command"] }
          },
          "to": [
            {
              "set_variable": { "name": "during mission control", "value": 1 }
            },
            { "key_code": "tab", "modifiers": ["command"] }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "left_command" },
          "to": [
            {
              "set_variable": {
                "name": "during mission control",
                "value": 1,
                "key_up_value": 0
              }
            },
            { "key_code": "left_command" }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "right_command" },
          "to": [
            {
              "set_variable": {
                "name": "during mission control",
                "value": 1,
                "key_up_value": 0
              }
            },
            { "key_code": "right_command" }
          ]
        }
      ]
    },
    {
      "description": "Home row mods",
      "manipulators": [
        {
          "from": {
            "simultaneous": [{ "key_code": "f" }, { "key_code": "d" }],
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "left_shift" }],
          "type": "basic"
        },
        {
          "from": {
            "simultaneous": [{ "key_code": "f" }, { "key_code": "s" }],
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "left_control" }],
          "type": "basic"
        },
        {
          "from": {
            "simultaneous": [
              { "key_code": "f" },
              { "key_code": "d" },
              { "key_code": "s" }
            ],
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "left_control", "modifiers": ["left_shift"] }],
          "type": "basic"
        },
        {
          "from": {
            "simultaneous": [{ "key_code": "j" }, { "key_code": "k" }],
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "right_shift" }],
          "type": "basic"
        },
        {
          "from": {
            "simultaneous": [{ "key_code": "j" }, { "key_code": "l" }],
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "right_control" }],
          "type": "basic"
        },
        {
          "from": {
            "simultaneous": [
              { "key_code": "j" },
              { "key_code": "k" },
              { "key_code": "l" }
            ],
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "right_control", "modifiers": ["right_shift"] }],
          "type": "basic"
        }
      ]
    }
  ]
}
